@page
@model AddressBookApp.IndexModel

@{
    ViewData["Title"] = "Address Bud";
}

<h1>Contacts</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        First Name search: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table"align="left">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Prefix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Suffix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].RelationshipType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Address2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Sex)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Person) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prefix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suffix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelationshipType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PersonID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PersonID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PersonID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
